generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator openapi {
  provider = "prisma-openapi"
  output   = "./swagger-definitions.json"
}

generator erd {
  provider = "prisma-erd-generator"
}



model Category {
  id       BigInt    @id @default(autoincrement()) @map("category_id")
  code     String    @map("code") @db.VarChar(50)
  name     String    @map("name") @db.VarChar(255)
  products Product[]

  @@map("category")
}

model Product {
  id              BigInt    @id @default(autoincrement()) @map("product_id")
  name            String    @map("name") @db.VarChar(255)
  category        Category  @relation(fields: [categoryId], references: [id])
  categoryId      BigInt    @map("category_id")
  image           String    @map("image") @db.VarChar(255)
  price           Int       @map("price")
  discountPercent Int       @map("discount_percent")
  description     String    @map("description") @db.VarChar(500)
  rating          Float     @map("rating")
  reviews         Int       @map("reviews")
  isBestSeller    Boolean   @map("is_best_seller") @default(false)
  isActive        Boolean   @map("is_active") @default(true)

  @@map("product")
}



